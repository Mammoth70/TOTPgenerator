<?xml version="1.0" encoding="utf-8"?>
<!-- Фрейм диалогового окна для ввода PIN. -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bullet1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_off"
            android:layout_marginHorizontal="4dp"
            android:importantForAccessibility="no"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/bullet2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_off"
            android:layout_marginHorizontal="4dp"
            android:importantForAccessibility="no"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/bullet3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_off"
            android:layout_marginHorizontal="4dp"
            android:importantForAccessibility="no"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/bullet4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="4dp"
            android:importantForAccessibility="no"
            android:src="@drawable/circle_off"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/bullet5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_off"
            android:layout_marginHorizontal="4dp"
            android:importantForAccessibility="no"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/bullet6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_off"
            android:layout_marginHorizontal="4dp"
            android:importantForAccessibility="no"
            tools:ignore="ImageContrastCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="?attr/colorError"
        android:padding="8dp"
        tools:text="Неправильный PIN"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="360dp">

        <Button
            style="?attr/materialButtonElevatedStyle"
            android:id="@+id/btn1"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:text="@string/c1"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <Button
            style="?attr/materialButtonElevatedStyle"
            android:id="@+id/btn2"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:text="@string/c2"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <Button
            style="?attr/materialButtonElevatedStyle"
            android:id="@+id/btn3"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:text="@string/c3"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <Button
            style="?attr/materialButtonElevatedStyle"
            android:id="@+id/btn4"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:text="@string/c4"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.35" />

        <Button
            style="?attr/materialButtonElevatedStyle"
            android:id="@+id/btn5"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:text="@string/c5"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.35" />

        <Button
            style="?attr/materialButtonElevatedStyle"
            android:id="@+id/btn6"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:text="@string/c6"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.35" />

        <Button
            style="?attr/materialButtonElevatedStyle"
            android:id="@+id/btn7"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:text="@string/c7"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.65" />

        <Button
            style="?attr/materialButtonElevatedStyle"
            android:id="@+id/btn8"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:text="@string/c8"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.65" />

        <Button
            style="?attr/materialButtonElevatedStyle"
            android:id="@+id/btn9"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:text="@string/c9"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.65" />

        <Button
            style="?attr/materialButtonElevatedStyle"
            android:id="@+id/btnBack"
            android:contentDescription="@string/backspace"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_action_backspace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95"
            app:layout_constraintBottom_toBottomOf="parent"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />

        <Button
            style="?attr/materialButtonElevatedStyle"
            android:id="@+id/btn0"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:text="@string/c0"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.95" />

        <Button
            style="?attr/materialButtonElevatedStyle"
            android:id="@+id/btnCancel"
            android:contentDescription="@string/cancel"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_action_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.95"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        style="?attr/materialIconButtonStyle"
        android:id="@+id/btnBiomeric"
        android:contentDescription="@string/fingerprint_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_action_fingerprint"
        app:iconSize="48dp"
        android:visibility="invisible"
        tools:visibility="visible" />
</LinearLayout>