<?xml version="1.0" encoding="utf-8"?>
<!-- Layout для ExportActivity. -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameExportActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExportActivity">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Top AppBar. -->
            <include layout="@layout/partial_app_bar_export" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/secretsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                tools:listitem="@layout/item_otpauth"
                tools:itemCount="5"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:paddingBottom="100dp"
                android:clipToPadding="false" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Bottom bar. -->
    <include layout="@layout/partial_bottom_button" />
</LinearLayout>